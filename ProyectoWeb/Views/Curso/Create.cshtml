@model Curso //Definimos el modelo a usar en la plantilla, necesario para que sea Fuertemente tipado

@{
    ViewData["Title"] = "Creacion de Curso";
    Layout = "Simple"; // Se hace por defecto si no se pone nada
}

<h1>@ViewData["Title"]</h1>
<div asp-asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre"/>
    </div>
    <div>
        <label asp-for="Dirección"></label>
        <input asp-for="Dirección"/>
    </div>
    <div>
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione una Jornada",
            new {@class = "form-control"}
        )
    </div>
    <input type="submit"/>
</form>

<p><i>@ViewBag.fecha</i></p>

